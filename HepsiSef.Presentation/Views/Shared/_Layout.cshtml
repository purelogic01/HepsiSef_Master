<script>

    var vm = new Vue({
        el: '#submitNewsLetter',
        data: function () {
            return {
                loading: false,
                form: {
                    Email: null
                },
                response: {
                    hasError: false,
                    validationErrors: [],
                    message: null
                }

            }
        },
        methods: {
            add() {
                this.loading = true

                axios.post("contact/newsletter", this.form).then((res) => {
                    this.response = res.data;

                    if (res.data.hasError) {
                        swal('Hata', res.data.message, 'error')
                    }
                    else {
                        swal('Basarili', res.data.message, 'success')
                        this.form.email = "";
                    }

                })
            }
        }
    })

</script>