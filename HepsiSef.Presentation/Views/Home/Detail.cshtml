                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!--banner ends-->


</div>

<script>
         
     var vm = new Vue({
         el: '#detailPage',
         data: function () {
             return {
                 loading: false,
                 item: {},
                 data: null

             }
         },

         beforeMount() {
             axios.post('http://localhost:5005/api/recipe/detail', { slug: '@ViewContext.HttpContext.Request.Query["slug"]' }).then((res) => {
                 this.data = res.data.data;


                 setTimeout(() => {
                     $('.slider').slick();
                 },500)
              })
         }
           
 })</script>

<style>
    .slick-prev {
        z-index: 9 ;
