<div id="detailPage" class="recipes-home-body inner-page">
    <div class="container" v-if="data != null">
        <div class="row">
            <div class="col-md-8 col-lg-9">
                <div class="recipe-set ">
                    <div class="wrapper-detail-contents">
                        <div class="single-recipe-detail">
                            <div class="wrapper-recipe-heading">
                                <div class="heading">
                                    <h2>{{data.title}}</h2>
                                    <div class="rating-box">
                                        <el-rate v-model="data.avarageRate"
                                                 disabled
                                                 show-score
                                                 text-color="#ff9900"
                                                 :score-template="data.avarageRate + '/5'">
                                        </el-rate>
                                      @*<span class="rating-figure">({{data.avarageRate}} / 5)</span>*@
                                    </div>
                                </div>
                                @*<div class="recipe-media">
